<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd">

    <var name="credential" class="com.colossus.sso.credential.CustomTwoStepCredential"/>
    <var name="phone" class="java.lang.String"/>
    <on-start>
        <evaluate expression="initialFlowSetupAction"/>
    </on-start>

    <action-state id="initializeLoginForm">
        <evaluate expression="initializeLoginAction"/>
        <transition on="success" to="twoStepTokenAction"/>
    </action-state>

    <action-state id="twoStepTokenAction">
        <evaluate expression="twoStepTokenAction"/>
        <transition on="authenticate" to="realSubmit"/>
        <transition on="success" to="viewLoginForm">
            <set name="phone" value="currentEvent.attributes.result" type="string"/>
        </transition>
    </action-state>

    <view-state id="viewLoginForm" view="casAuthyLoginView" model="credential">
        <binder>
            <binding property="token" required="true"/>
            <binding property="phone" required="true"/>
        </binder>
        <on-entry>
            <set name="viewScope.principal" value="conversationScope.authentication.principal"/>
        </on-entry>
        <transition on="submit" bind="true" validate="true" to="realSubmit"/>
    </view-state>

    <action-state id="realSubmit">
        <evaluate expression="oneTimeTokenAuthenticationWebflowAction"/>
        <transition on="success" to="success"/>
        <transition on="error" to="viewLoginForm"/>
    </action-state>

    <end-state id="success"/>
</flow>